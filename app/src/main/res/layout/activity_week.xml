            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtFooterWeek"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#6200ED"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHeaderWeek"
            android:layout_marginTop="25dp" app:layout_constraintHorizontal_bias="0.0" android:onClick="clkRotate"
