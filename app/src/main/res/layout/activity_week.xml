            android:text="Rotation"
            android:layout_width="110dp"
            android:layout_height="wrap_content" android:id="@+id/swtRotationWeek"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtRestWeek"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="@+id/txtFooterWeek"
            android:layout_marginEnd="225dp" android:layout_marginTop="15dp"
            android:onClick="clkRotationFooterLeftWeek" android:layout_marginStart="5dp" android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>