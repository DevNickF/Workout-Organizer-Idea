            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/button_physique_check_off"
            android:clickable="true" android:onClick="clkBuildHeaderCenterWeek"/>
